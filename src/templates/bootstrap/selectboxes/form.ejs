<div class="checkbox-panels">
    {% ctx.values.forEach(function(item) { %}
    <div class="checkbox-panel-item" ref="wrapper">

        <div>
            <span class="checkbox-panel-title">{{item.label}}</span>
            <ul>
                {% item.description.split("\n").forEach(function (desc) {  %}
                  <li>{{desc}}</li>
                {% }) %}
            </ul>
        </div>
       <div class="checkbox-panel-checkbox">
            <span class="checkbox-icon">
                <svg width="30" height="30" viewBox="0 0 24 24" fill="none"><rect x="2.5" y="2.5" width="19" height="19" rx="2.5" fill="#fff" stroke="currentColor"></rect></svg>
                <{{ctx.input.type}}
                ref="input"
                {% for (var attr in ctx.input.attr) { %}
                {{attr}}="{{ctx.input.attr[attr]}} {% if (attr==='class') { %} govuk-checkboxes__input {% } %}"
                {% } %}
                value="{{item.value}}"
                {% if (ctx.value === item.value || (typeof ctx.value === 'object' && ctx.value.hasOwnProperty(item.value) && ctx.value[item.value])) { %}
                checked=true
                {% } %}
                id="{{ctx.id}}{{ctx.row}}-{{item.value}}"
                >
            </span>
       </div>
    </div>
    {% }) %}
</div>